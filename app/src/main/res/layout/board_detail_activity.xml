<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>
        <variable
            name="viewModel"
            type="com.indicar.indicar_community.viewmodel.BoardDetailViewModel"/>
    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorWhite">

        <android.support.v4.widget.NestedScrollView
            android:id="@+id/scrollview_outer_frame"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/recyclerview_board_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:scrollbars="vertical"/>

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/recyclerview_comment_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:scrollbars="vertical"/>

            </LinearLayout>

        </android.support.v4.widget.NestedScrollView>

        <ImageButton
            style="@style/imageButtonCustomStyle"
            android:id="@+id/imagebutton_like"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="20dp"
            android:layout_toLeftOf="@+id/imagebutton_comment"
            android:layout_alignParentBottom="true"
            android:onClick="@{(v) -> viewModel.onLikeButtonClick(v)}"
            android:src="@drawable/btn_like_unclicked"/>

        <ImageButton
            style="@style/imageButtonCustomStyle"
            android:id="@+id/imagebutton_comment"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="20dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:onClick="@{(v) -> viewModel.onCommentButtonClick(v)}"
            android:src="@drawable/btn_comment_unclicked"/>

    </RelativeLayout>
</layout>
