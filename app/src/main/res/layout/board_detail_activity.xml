<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="viewModel"
            type="com.indicar.indicar_community.viewmodel.BoardDetailViewModel"/>
    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorWhite">

        <android.support.v4.widget.NestedScrollView
            android:id="@+id/scrollview_outer_frame"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ImageView
                    style="@style/imageButtonCustomStyle"
                    android:id="@+id/imageview_main"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:imageUrl="@{viewModel.boardItem.fileUrl}"
                    app:boardType="@{viewModel.board.boardType}"/>

                <LinearLayout
                    android:background="@color/colorWhite"
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:orientation="horizontal"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp">

                    <ImageButton
                        style="@style/imageButtonCustomStyle"
                        android:id="@+id/imagebutton_user_profile"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_gravity="center_vertical"
                        app:circleImageUrl="@{viewModel.boardItem.fileUrl}"/>
                    <!--app:circleImageUrl="@{board.userProfileUrl}"-->

                    <TextView
                        style="@style/textViewBoardInfoStyle"
                        android:id="@+id/textview_user_name"
                        android:layout_marginLeft="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:text="@{viewModel.board.userName}"/>

                    <TextView
                        style="@style/textViewBoardInfoStyle"
                        android:id="@+id/textview_board_id"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical|end"
                        android:textAlignment="textEnd"
                        android:text="@{viewModel.board.boardType}"/>

                </LinearLayout>

                <LinearLayout
                    android:background="@color/colorWhite"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:orientation="horizontal"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp">

                    <TextView
                        style="@style/textViewBoardInfoStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:text="좋아요"/>

                    <TextView
                        style="@style/textViewBoardInfoStyle"
                        android:id="@+id/textview_like_count"
                        android:layout_marginLeft="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:text="@{viewModel.board.likeCount}"/>

                    <TextView
                        style="@style/textViewBoardInfoStyle"
                        android:layout_marginLeft="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:text="댓글"
                        android:gravity="center_vertical"/>

                    <TextView
                        style="@style/textViewBoardInfoStyle"
                        android:id="@+id/textview_comment_count"
                        android:layout_marginLeft="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:text="@{viewModel.board.commentCount}"/>

                    <TextView
                        style="@style/textViewBoardInfoStyle"
                        android:id="@+id/lastDate"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical|end"
                        android:textAlignment="textEnd"
                        app:date="@{viewModel.board.firstDate}"/>

                </LinearLayout>

                <TextView
                    style="@style/textViewBoardContentStyle"
                    android:id="@+id/textview_main"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@{viewModel.boardItem.content}"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/recyclerview_board_container"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:scrollbars="vertical"
                        app:adapter="@{viewModel.adapter}"
                        app:layoutManager="@{viewModel.layoutManager}"/>

                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/recyclerview_comment_container"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:scrollbars="vertical"/>

                </LinearLayout>

            </LinearLayout>

        </android.support.v4.widget.NestedScrollView>

        <ImageButton
            style="@style/imageButtonCustomStyle"
            android:id="@+id/imagebutton_like"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="20dp"
            android:layout_toLeftOf="@+id/imagebutton_comment"
            android:layout_alignParentBottom="true"
            android:onClick="@{(v) -> viewModel.onLikeButtonClick(v)}"
            android:src="@drawable/btn_like_unclicked"/>

        <ImageButton
            style="@style/imageButtonCustomStyle"
            android:id="@+id/imagebutton_comment"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="20dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:onClick="@{(v) -> viewModel.onCommentButtonClick(v)}"
            android:src="@drawable/btn_comment_unclicked"/>

    </RelativeLayout>
</layout>
