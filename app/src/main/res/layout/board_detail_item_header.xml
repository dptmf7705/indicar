<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="board"
            type="com.indicar.indicar_community.model.vo.BoardDetailVO"/>
        <variable
            name="boardItem"
            type="com.indicar.indicar_community.model.vo.BoardFileVO"/>
    </data>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                style="@style/imageButtonCustomStyle"
                android:id="@+id/imageview_main"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:imageUrl="@{boardItem.fileUrl}"
                app:boardType="@{board.boardType}"/>

            <LinearLayout
                android:background="@color/colorWhite"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp">

                <ImageButton
                    style="@style/imageButtonCustomStyle"
                    android:id="@+id/imagebutton_user_profile"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center_vertical"
                    app:circleImageUrl="@{boardItem.fileUrl}"/>
                <!--app:circleImageUrl="@{board.userProfileUrl}"-->

                <TextView
                    style="@style/textViewBoardInfoStyle"
                    android:id="@+id/textview_user_name"
                    android:layout_marginLeft="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:text="@{board.userName}"/>

                <TextView
                    style="@style/textViewBoardInfoStyle"
                    android:id="@+id/textview_board_id"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical|end"
                    android:textAlignment="textEnd"
                    android:text="@{board.boardType}"/>

            </LinearLayout>

            <LinearLayout
                android:background="@color/colorWhite"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:orientation="horizontal"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp">

                <TextView
                    style="@style/textViewBoardInfoStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="좋아요"/>

                <TextView
                    style="@style/textViewBoardInfoStyle"
                    android:id="@+id/textview_like_count"
                    android:layout_marginLeft="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="@{board.likeCount}"/>

                <TextView
                    style="@style/textViewBoardInfoStyle"
                    android:layout_marginLeft="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="댓글"
                    android:gravity="center_vertical"/>

                <TextView
                    style="@style/textViewBoardInfoStyle"
                    android:id="@+id/textview_comment_count"
                    android:layout_marginLeft="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="@{board.commentCount}"/>

                <TextView
                    style="@style/textViewBoardInfoStyle"
                    android:id="@+id/lastDate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical|end"
                    android:textAlignment="textEnd"
                    android:text="@{board.firstDate}"/>

            </LinearLayout>

            <TextView
                style="@style/textViewBoardContentStyle"
                android:id="@+id/textview_main"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@{boardItem.content}"/>

        </LinearLayout>

    </android.support.v7.widget.CardView>
</layout>