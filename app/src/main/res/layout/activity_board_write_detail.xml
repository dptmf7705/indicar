<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/colorTabMenu"
        android:elevation="1dp">

        <LinearLayout
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:orientation="horizontal"
            android:background="@color/colorTabMenu"
            android:gravity="center">

            <ImageButton
                android:layout_width="25dp"
                android:layout_height="match_parent"
                android:adjustViewBounds="true"
                android:background="@drawable/button_left_arrow"
                android:scaleType="center" />

            <TextView
                android:id="@+id/currentPage"
                android:layout_width="30dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:layout_gravity="center"
                android:textAlignment="center"
                android:text="1"
                android:textSize="15sp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:layout_gravity="center"
                android:textAlignment="center"
                android:text="/"
                android:textSize="15sp"/>

            <TextView
                android:id="@+id/totalPage"
                android:layout_width="30dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:layout_gravity="center"
                android:textAlignment="center"
                android:text="1"
                android:textSize="15sp"/>

            <ImageButton
                android:layout_width="25dp"
                android:layout_height="match_parent"
                android:adjustViewBounds="true"
                android:background="@drawable/button_right_arrow"
                android:scaleType="center" />

        </LinearLayout>

        <ImageButton
            android:id="@+id/btnAddSlide"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_centerInParent="true"
            android:layout_toLeftOf="@+id/btnDeleteSlide"
            android:layout_toStartOf="@+id/btnDeleteSlide"
            android:adjustViewBounds="true"
            android:background="@drawable/button_add_slide"
            android:scaleType="centerInside" />

        <ImageButton
            android:id="@+id/btnDeleteSlide"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerInParent="true"
            android:adjustViewBounds="true"
            android:background="@drawable/button_trash"
            android:scaleType="centerInside" />

    </RelativeLayout>

    <android.support.v4.view.ViewPager
        android:id="@+id/writeDetailPager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1">

    </android.support.v4.view.ViewPager>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/btn_quit"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop"/>

        <ImageView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/btn_upload_board"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop"/>

    </LinearLayout>
</LinearLayout>
