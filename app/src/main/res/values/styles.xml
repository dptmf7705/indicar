<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="actionBarSize">60dp</item>
    </style>

    <!-- Splash Activity 테마 -->
    <style name="LaunchTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:layout">@layout/a0_activity_splash</item>
        <item name="colorPrimary">@color/colorSplashBackground</item>
        <item name="colorPrimaryDark">@color/colorSplashBackground</item>
    </style>

    <!-- Photo Picker 테마 -->
    <style name="photoPickerTheme" parent="Matisse.Zhihu">
        <item name="colorPrimary">#fcfcfc</item>
        <item name="colorPrimaryDark">#ffffff</item>
        <item name="album.title.color">#525252</item>
        <item name="album.count.color">#525252</item>
    </style>
</resources>
